<!------------------------------------->
<!--! Input de chats y comentarios  -->
<!------------------------------------->

form.giant
  .form-group.form-user
    .img.avatar.cover(style="background-image:url('images/joinity-temp/avatar.jpeg')")
    input.form-control.big.framed(placeholder="Escribe aquí")
    .button-group
      .btn.small.azul.text-transform Enviar
      .btn.small.azul
        i.icon-camera.icon-large

<!---------------------------------------------->
<!--! Inputs: normales y con marco (.frame)  -->
<!---------------------------------------------->

form.giant
  input.form-control.giant.framed(placeholder="Escribe aquí lo que quieras")
  .btn.giant.azul Busca
  
<!----------------->
<!--! Textarea  -->
<!----------------->

form.form.giant
  textarea.form-control.normal

<!---------------------->
<!--! Select normal  -->
<!---------------------->

select.selectpicker.btn.azul.normal.text-left.text-transform
  optgroup(label="picnic")
    option.unread Esto es una opción
    option.read Esto es una opción
    
  
<!--------------------------------->
<!--! Select de notificaciones  -->
<!--------------------------------->

select.selectpicker.btn.azul.normal.text-left.text-transform.notification
  optgroup(label="picnic")
    option.unread Esto es una opción
    option.read Esto es una opción
  
<!------------------------------>
<!--! Check y radio buttons  -->
<!------------------------------>

.form-group.rojo.normal.task
  input.check.rojo#uno(type="checkbox",value="yes",name="uno",data-label="Right positioned label (no param)")

.form-group.rojo.normal
  input.check(type="radio",value="yes",name="answer",data-label="Este es el label")
  
  // Otra tarea con otro formato (pequeña)
  
.form-group.claro.small.task
  input.check.gris#uno(type="checkbox",value="yes",name="uno",data-label="Esto es una tarea")
  
<!------------------->
<!--! Datepicker  -->
<!------------------->

form.normal
  input.form-control.normal.datepicker(type="text",value="02-16-2012")
  
